root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 2

[*.css]
indent_size = 4
tab_width = 4

[{*.go,*.go2}]
indent_size = 4
indent_style = tab
tab_width = 4

[{*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.mjmlconfig,.prettierrc,.stylelintrc,bowerrc,jest.config}]
tab_width = 4

[{*.markdown,*.md}]
indent_size = 4
tab_width = 4
